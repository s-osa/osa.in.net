!!! html

%html{ lang: 'ja' }
  %head
    - if build?
      = partial 'layouts/google_analytics'
    %meta{ charset: 'utf-8' }
    %title= current_page.data.title || 'osa.in.net'
    = stylesheet_link_tag :site
    = javascript_include_tag :all

  %body{ class: "#{page_classes}" }
    .wrapper
      .block
        %h1.site-name
          %a{ href: '/' } osa.in.net

      = yield
